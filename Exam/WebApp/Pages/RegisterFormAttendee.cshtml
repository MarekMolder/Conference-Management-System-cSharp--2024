@page
@model WebApp.Pages.RegisterFormAttendee

@{
ViewData["Title"] = "Register as Attendee";
}

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/form.css">
</head>

<div class="container">
    <h1>Register as Attendee</h1>

    @if (TempData["SuccessMessage"] != null)
    {
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
    }

    <form method="post" class="register-form">
        <div class="form-group">
            <label for="FirstName">First Name</label>
            <input type="text" id="FirstName" name="Participant.FirstName" required />
        </div>
        <div class="form-group">
            <label for="LastName">Last Name</label>
            <input type="text" id="LastName" name="Participant.LastName" required />
        </div>
        <div class="form-group">
            <label for="Email">Email</label>
            <input type="email" id="Email" name="Participant.Email" required />
        </div>
        <div class="form-group">
            <label for="Phone">Phone</label>
            <input type="text" id="Phone" name="Participant.Phone" required />
        </div>

        <button type="submit">Register</button>
    </form>
</div>
